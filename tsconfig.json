{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "esModuleInterop": true,
    "importHelpers": true,
    "isolatedModules": false,
    "jsx" :  "react",
    "lib": [
      "DOM",
      "es2015",
      "es2016.array.include",
      "es2017"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "outDir": "dist",
    "pretty": true,
    "resolveJsonModule": true,
    "strict": true,
    "target": "es2019"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "src/**/*.test.ts",
    "src/**/*.mock.ts"
  ],
  "types": []
}
